<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_500"
    app:layoutDescription="@xml/activity_splashscreen_scene"
    tools:context=".ui.activity.SplashscreenActivity">

    <ImageView
        android:id="@+id/iv_pokemon"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:background="@drawable/bg_image"
        android:contentDescription="@string/iv_splashcreen_desc"
        android:elevation="7dp"
        android:src="@drawable/ic_charizad"
        app:layout_constraintBottom_toTopOf="@id/iv_pokemon2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/iv_pokemon2"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/iv_pokemon_desc"
        android:src="@drawable/ic_pokemon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_pokemon" />

</androidx.constraintlayout.motion.widget.MotionLayout>